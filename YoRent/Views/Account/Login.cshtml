@model YoRent.Models.UserLoginValidation
    <h2>Login</h2>
<form class="form-horizontal" action="~/account/login" method="post">

    @Html.AntiForgeryToken()
    <input name="returnurl" type="hidden" value="@(ViewBag.returnUrl)" />

    <div class="form-group">
        <label class="control-label">UserName:</label>
        <input type="text" class="form-control" name="name" required/>
    </div>

    <div class="form-group">
        <label class="control-label">Password:</label>
        <input type="password" class="form-control" name="password" required/>
    </div>

    <div class="form-group">
        <input type="submit" value="Login" class="form-control" />
    </div>
</form>
<div class="form-horizontal">
    @if (Model != null && !string.IsNullOrEmpty(Model.Error))
    {
        <div class="form-group alert alert-danger">
            <span>@Model.Error</span>
        </div>
    }

    <div class="form-group">
        <a href="~/account/register">Register Here</a>
    </div>
</div>
