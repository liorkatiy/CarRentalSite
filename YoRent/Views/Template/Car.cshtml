@(Layout = null);

<div class="media">
    <div class="pull-left">
        <img ng-src="~/images/{{car.picture}}" 
             alt="No Pic" 
             class="img-rounded img-responsive img-size" />
    </div>
        <div class="media-body">
            manufacturer: {{car.manufacturer}}<br />
            Model: {{car.model}}<br />
            Is Manual: {{car.ismanual}}<br />
            Year: {{car.year}}<br />
            Daily Cost: {{car.dailycost}}<br />
            Late Fee: {{car.latefee}}<br />
            Total Cost: <span>{{car.totalcost}}</span><br />
            <input type="button" ng-click="rentCar(car)" value="BUY" />
            <input type="button" ng-show="showFav" value="Add Favorite" ng-click="addFavorite(car)" />
            <input type="button" ng-show="!showFav" value="Remove Favorite" ng-click="removeFavorite(car)" />
        </div>
    </div>
    <hr class="thick" />
